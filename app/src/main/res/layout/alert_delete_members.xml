<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/view_bg" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:textSize="18.0dip"
        android:textColor="@color/blue"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="Alert" />

    <TextView
        android:id="@+id/line"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="5.0dip"
        android:alpha="0.3" />

    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/info_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="@string/single_text" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp">\

        <Button android:textSize="18.0dip"
            android:textColor="@color/white"
            android:id="@+id/cancelBtn"
            android:background="@drawable/gradient_button_background"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="@string/cancel"
            android:layout_weight="1.0"
            android:textAllCaps="false" />
        <Button
            android:textSize="18.0dip"
            android:textColor="@color/white"
            android:id="@+id/yesBtn"
            android:background="@drawable/gradient_button_background"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:text="OK"
            android:layout_weight="1.0"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>