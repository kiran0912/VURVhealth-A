<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/htab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/view_bg"
        android:gravity="top|center"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/back_btn" />

                <TextView
                    android:id="@+id/tb_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Create VURVhealth ID"
                    android:textColor="@color/blue"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/gradient_vurv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/get_VURVID"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etHomeAddrs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            android:hint="@string/home_addrs"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:maxLength="100"
            android:paddingLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textColorHint="@color/hintColor" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/border_line"
            android:hint="@string/city"
            android:lines="1"
            android:inputType="textNoSuggestions"
            android:maxLength="25"
            android:paddingLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textColorHint="@color/hintColor" />

        <Spinner
            android:id="@+id/spState"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            style="@style/spinner_style"
            android:hint="@string/state"
            android:lines="1"
            android:singleLine="true"
            android:textColorHint="@color/hintColor" />

        <EditText
            android:id="@+id/etZip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/border_line"
            android:hint="@string/zip_code"
            android:inputType="number"
            android:lines="1"
            android:maxLength="5"
            android:paddingLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textColorHint="@color/hintColor" />

        <EditText
            android:id="@+id/etPhno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/border_line"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="15"
            android:paddingLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textColorHint="@color/hintColor" />


        <Button
            android:id="@+id/btn_next_inactive"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_margin="40dp"
            android:alpha="0.48"
            android:background="@drawable/button_background_disable"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_next_active"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_margin="40dp"
            android:background="@drawable/gradient_button_background"
            android:stateListAnimator="@null"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>