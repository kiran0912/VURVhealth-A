<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="150.0dip" android:scaleType="fitCenter"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--change image-->
    <FrameLayout
        android:id="@+id/cardImg"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_gravity="center"
        android:background="@drawable/card_rx_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="33.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_weight="1.0"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Sudhakar Reddy yalla"
                    android:textColor="@color/white"
                    android:textSize="10.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rxBinNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/bin"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="46.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vurv_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="VURV  ID: 123456fgfg"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />

                <TextView
                    android:id="@+id/rxPcnNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/pcn"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="58.0dip"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <TextView
                    android:id="@+id/plan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="Plan: Pulse"
                    android:textColor="@color/white"
                    android:textSize="10.0sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/rxGRP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_weight="1.0"
                    android:maxLines="1"
                    android:text="@string/grp"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="68.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:maxLines="1"
                    android:text="Expires: 11/22/2016"
                    android:textColor="@color/white"
                    android:textSize="10.0sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/raMemID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_weight="1.0"
                    android:maxLines="1"
                    android:text="@string/member_id"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="82.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expires"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:maxLines="1"
                    android:text="Expires: 11/22/2016"
                    android:textColor="@color/white"
                    android:textSize="10.0sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvInsure"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:maxLines="1"
                    android:text="@string/this_is_not_insurance"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="95.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCardProvider"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/card_provider"
                    android:textColor="@color/black"
                    android:textSize="8.0sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>



    </FrameLayout>


</LinearLayout>