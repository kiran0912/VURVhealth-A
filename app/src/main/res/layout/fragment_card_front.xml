<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardImg"
    android:layout_width="470dp"
    android:layout_height="340dp"
    android:layout_gravity="center"
    android:background="@drawable/card_rx_large1"
    android:visibility="visible"
    android:rotation="90.0">

<!--
    android:rotation="90.0"
-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80.0dip"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Sudhakar Reddy yalla"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRxBin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:background="@null"
                android:text="BIN \u0020\u0020\u0020\u0020\u0020 018323"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vurv_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:text="VURV ID: 123456fgfg"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/rxPcNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:background="@null"
                android:text="PCN \u0020\u0020\u0020\u0020\u0020VURV"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:maxLines="1"
                android:text="@string/plan360"
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:visibility="visible" />r

            <TextView
                android:id="@+id/rxGRP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:background="@null"
                android:maxLines="1"
                android:text="GRP \u0020\u0020\u0020\u0020\u0020VURV"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_auth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:orientation="horizontal"
            android:weightSum="100"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMemberId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:background="@null"
                android:maxLines="1"
                android:text="@string/member_id"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@null"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:maxLines="2"
                android:text="@string/card_data1"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/expires"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:background="@null"
                android:maxLines="4"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_thisis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:background="@null"
                android:text="@string/this_is_not_insurance"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="11dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCardProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/card_provider"
            android:textColor="@color/black"
            android:textSize="14.0sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>