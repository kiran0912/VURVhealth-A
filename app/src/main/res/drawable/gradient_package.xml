<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#0063A8"
                android:endColor="#00B7E8"
                android:gradientRadius="360"
                android:startColor="#C1D62E"
                android:type="linear" />

            <corners android:radius="2dp" />

           <!-- <stroke
                android:width="2dp"
                android:color="#62A945" />-->
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/view_bg" />
        </shape>
    </item>

</layer-list>